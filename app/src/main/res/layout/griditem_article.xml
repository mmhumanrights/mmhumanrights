<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp">
    <RelativeLayout
        android:id="@+id/grid_item_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <TextView
            android:id="@+id/tv_article"
            style="@style/QUESTION_TEXTVIEW"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="asdf"
            android:textColor="@color/main_text_color"


            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_definition"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="asdfasdf"
            android:maxLines="3"
            style="@style/LIST_ITEM_TEXTVIEW"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_article"
            android:layout_alignLeft="@+id/tv_article"
            android:layout_alignStart="@+id/tv_article" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/to_continue_reading"
            android:id="@+id/textView2"
            android:textColor="@color/main_blue_dark"
            fontPath="fonts/Padauk_Bold.ttf"
            android:layout_gravity="right|top"
            android:layout_alignTop="@+id/tv_article"
            android:layout_alignRight="@+id/tv_definition"
            android:layout_alignEnd="@+id/tv_definition"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>





